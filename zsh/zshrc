export DOTFILES=$HOME/.dotfiles

# Add GNU Utils to Path
PATH="/usr/local/opt/coreutils/libexec/gnubin:$PATH"

ZSH_MODULES=$DOTFILES/zsh/modules

# Prompt
source $DOTFILES/zsh/prompt/spaceship.zsh

# Git completions
source $DOTFILES/zsh/completions/completions.zsh

# ZSH Modules
source $ZSH_MODULES/aliases.zsh
source $ZSH_MODULES/nvm.zsh
source $ZSH_MODULES/colors.zsh
source $ZSH_MODULES/android.zsh
source $ZSH_MODULES/functions.zsh
source $ZSH_MODULES/secrets.zsh

export PATH=$ZSH_MODULES/diff-so-fancy/diff-so-fancy:$PATH

