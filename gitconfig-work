# Custom Git Config For Anthem Systems
# Anthem requires that the name and email
# Match what the user is registered with in Bitbucket.
[user]
    name = Golovine, Sunny
    email = Sunny.Golovine@anthem.com
[core]
  editor = vim
  pager = diff-so-fancy | less --tab=4 -RFX
[interactive]
  diffFilter = diff-so-fancy --patch
[color]
  ui = true
[color "diff-highlight"]
  oldNormal = red bold
  oldHighlight = red bold 52
  newNormal = green bold
  newHighlight = green bold 22
[color "diff"]
  meta = 11
  frag = megenta bold
  func = 146 bold
  commit = yellow bold
  old = red bold
  new = green bold
  whitespace = red reverse